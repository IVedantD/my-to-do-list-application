<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen bg-gradient-to-br from-gray-800 to-gray-900 text-white p-10">
        <!-- Header Section -->
        <header class="text-center mb-10">
            <h1 class="text-5xl font-extrabold mb-2">ðŸ“‹ My To-Do List</h1>
            <p class="text-gray-400">Organize your tasks efficiently</p>
        </header>

        <!-- Add Task Section -->
        <section class="max-w-3xl mx-auto mb-10">
            <div class="bg-gray-800 rounded-lg shadow-lg p-6">
                <h2 class="text-2xl font-semibold mb-4">Add a New Task</h2>
                <form action="/create" method="post" class="space-y-4">
                    <input 
                        type="text" 
                        name="title" 
                        placeholder="Enter task title" 
                        class="w-full p-3 rounded bg-gray-700 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <textarea 
                        name="details" 
                        placeholder="Enter task details..." 
                        class="w-full p-3 rounded bg-gray-700 border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    <button 
                        type="submit" 
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-bold">
                        Add Task
                    </button>
                </form>
            </div>
        </section>

        <!-- Tasks Section -->
        <section class="max-w-4xl mx-auto">
            <h2 class="text-2xl font-semibold mb-6">Your Tasks</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% tasks.forEach(task => { %>
                    <div class="bg-gray-800 rounded-lg shadow-lg p-6">
                        <h3 class="text-xl font-semibold text-blue-400"><%= task.title %></h3>
                        <p class="text-gray-400 text-sm mt-2 mb-4"><%= task.content %></p>
                        <div class="flex justify-between items-center">
                            <a 
                                href="/read/<%= task.title %>" 
                                class="text-sm bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg">
                                Read
                            </a>
                            <a 
                                href="/edit/<%= task.title %>" 
                                class="text-sm bg-yellow-600 hover:bg-yellow-700 text-white py-2 px-4 rounded-lg">
                                Edit
                            </a>
                            <form action="/delete/<%= task.title %>" method="post" class="inline">
                                <button 
                                    type="submit" 
                                    class="text-sm bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-lg">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
                <% if (tasks.length === 0) { %>
                    <p class="col-span-full text-gray-500 text-center">No tasks yet. Add your first task!</p>
                <% } %>
            </div>
        </section>
    </div>
</body>
</html>
